@model SchedulerApp.Models.Schedule.Schedules

<link rel="stylesheet" href="~/css/Schedule/Schedules.css" />
<script src="~/js/Schedule/Schedules.js"></script>

@{
    Layout = "_Layout";
}

<div id="modal-placeholder"></div>

<div class="page-header">
    <span class="h3">Schedule</span>
    <button type="button" class="btn btn-primary pull-right" data-toggle="ajax-modal" data-target="#add-schedule" data-url="@Url.Action("EditScheduleModal")">
        Modify Schedule
    </button>
    
</div>


<div class="row">
    <div class="col-xs-3">
        <div class="input-group">
            <span>Team: </span>
            <select asp-for="TeamIdParam" asp-items="Model.TeamSelectList"></select>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="input-group">
            <span>Start: </span>
            <input asp-for="StartDateParam" class="date" />
        </div>
    </div>
    <div class="col-xs-3">
        <div class="input-group">
            <span>End: </span>
            <input asp-for="EndDateParam" class="date" />
        </div>
    </div>
</div>

<table id="schedulesTable" class="table table-striped table-bordered compact" style="width:100%">
    <thead>
        <tr>
            <th>Team</th>
            <th>User</th>
            <th>Support Level</th>
            <th>Start</th>
            <th>End</th>
        </tr>
    </thead>
</table>


