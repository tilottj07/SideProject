@model SchedulerApp.Models.Location.Locations

<link rel="stylesheet" href="~/css/Location/Locations.css" />
<script src="~/js/Location/Locations.js"></script>

@{
    Layout = "_Layout";
}

<div id="modal-placeholder"></div>

<h2>Locations</h2>

<div class="float-sm-right" style="float: right; padding-bottom: 10px;">
    <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-location" data-url="@Url.Action("EditLocationModal")">
        Add Location
    </button>
</div>

<table id="locationsTable" class="table table-striped table-bordered table-condensed" style="width:100%">
    <thead>
        <tr>
            <th>Location Name</th>
            <th>Description</th>
            <th>Address</th>
            <th>City</th>
            <th>State/Region</th>
            <th>Country</th>
            <th>Zip Code</th>
            <th></th>
        </tr>
    </thead>
</table>


