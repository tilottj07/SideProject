@model SchedulerApp.Models.Category.EditCategory
<!-- Modal -->
<div class="modal fade" id="add-category" tabindex="-1" role="dialog" aria-labelledby="addCategoryLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title" id="addCategoryLabel">@Model.ModalTitle</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="EditCategoryModal">

                    @Html.HiddenFor(x => x.CategoryId)
                    @Html.HiddenFor(x => x.IsAddNew)
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />

                    <div class="form-group">
                        <label asp-for="CategoryName"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryDescription"></label>
                        <textarea asp-for="CategoryDescription" class="form-control">@Model.CategoryDescription</textarea>
                        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryEmail"></label>
                        <input asp-for="CategoryEmail" class="form-control" />
                        <span asp-validation-for="CategoryEmail" class="text-danger"></span>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                @if (Model.IsAddNew == false)
                {
                    <button type="button" class="btn btn-secondary" data-save="delete">Delete</button>
                }
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>